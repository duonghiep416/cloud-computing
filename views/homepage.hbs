<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>ToyLand - Cửa hàng đồ chơi trực tuyến</title>
        <link rel="stylesheet" href="style.css" />
    </head>

    <body>
        <!-- Header -->
        <header class="header">
            <div class="container">

                <nav class="main-nav">
                    <ul>
                        <img
                            style="height: 64px; width: 100px; "
                            src="logo3.png"
                            alt="ToyLand Logo"
                            class="logo"
                        />
                        <li><a href="/homepage">Trang chủ</a></li>
                        <li><a href="/toy-manager">Cửa hàng</a></li>
                        <li><a href="#categories">Danh mục</a></li>
                        <li><a href="#about">Giới thiệu</a></li>
                        <li><a href="#contact">Liên hệ</a></li>
                        <li><a href="#cart">Giỏ hàng</a></li>
                        <div class="user-buttons">
                            <!-- Sử dụng handlebars để hiển thị email nếu đã đăng nhập -->
                            {{#if user}}
                                <span class="user-name">Xin chào,
                                    {{user.name}}</span>
                                <a href="/logout" class="btn btn-secondary">Đăng
                                    xuất</a>
                            {{else}}
                                <!-- Nếu chưa đăng nhập, hiển thị nút Đăng ký và Đăng nhập -->
                                <a
                                    href="/register"
                                    class="btn btn-secondary"
                                >Đăng ký</a>
                                <a href="/login" class="btn btn-primary">Đăng
                                    nhập</a>
                            {{/if}}
                        </div>
                    </ul>
                </nav>
            </div>
        </header>
        <div class="background-home">
        </div>
        <!-- Hero Section -->
        <section class="hero">
            <div class="container">
                <h1>Chào mừng bạn đến với thế giới đồ chơi dành cho trẻ em
                    ToyStore</h1>
                <p>Explore the diverse world of toys for babies</p>
                <a href="/toy-manager" class="btn btn-primary">Xem ngay</a>
            </div>
        </section>
        <!-- Featured Products Section -->
        <section class="featured-products">
            <div class="container">
                <h2>Sản phẩm nổi bật</h2>
                <div class="product-grid">
                    {{#each featuredProducts}}
                        <!-- Hiển thị các sản phẩm nổi bật với hình ảnh, tên và giá cả -->
                        <div class="product-item">
                            <a href="/product/{{_id}}">
                                <!-- Thêm liên kết đến trang view sản phẩm với id của sản phẩm -->
                                <img src="{{image}}" alt="{{name}}" />
                            </a>
                            <h3>{{name}}</h3>
                            <p>Giá: {{price}}</p>
                        </div>
                    {{/each}}
                </div>
            </div>
        </section>
        <!-- About Us Section -->
        <!-- Footer -->
        <footer class="footer">
            <div class="container">
                <p>&copy; 2023 ToyStore. All rights reserved.</p>
                <div class="social-links">
                    <!-- Các biểu tượng mạng xã hội -->
                    <a href="#" class="social-icon"><img
                            src="facebook.png"
                            alt="Facebook"
                        /></a>
                    <a href="#" class="social-icon"><img
                            src="instagram.png"
                            alt="Instagram"
                        /></a>
                    <a href="#" class="social-icon"><img
                            src="twitter.png"
                            alt="Twitter"
                        /></a>
                </div>
            </div>
        </footer>
    </body>

</html>