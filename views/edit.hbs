<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit Product</title>
        <link rel="stylesheet" href="/edit.css" />
        <!-- Add any additional CSS or stylesheets here -->
    </head>

    <body>
        <div class="container">
            <h1>Edit Product</h1>
            <form action="/edit/{{product._id}}" method="post">
                <label for="name">Name:</label>
                <input
                    type="text"
                    id="name"
                    name="name"
                    value="{{product.name}}"
                    required
                /><br />
                <label for="price">Price:</label>
                <input
                    type="number"
                    id="price"
                    name="price"
                    value="{{product.price}}"
                    required
                /><br />
                <label for="image">Image URL:</label>
                <input
                    type="text"
                    id="image"
                    name="image"
                    value="{{product.image}}"
                    required
                /><br />
                <label for="description">Description:</label>
                <textarea
                    id="description"
                    name="description"
                    rows="4"
                    required
                >{{product.description}}</textarea><br />
                <button type="submit">Save Changes</button>
            </form>
            <a href="/homepage">Back to Homepage</a>
        </div>
    </body>

</html>